                }
                
                /* Fading animation */
                .fade {
                animation-name: fade;
                animation-duration: 1.5s;
                }
                
                @keyframes fade {
                from {opacity: .4} 
                to {opacity: 1}
                }
                
                /* On smaller screens, decrease text size */
